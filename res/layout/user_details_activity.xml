<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/background2"
    android:orientation="vertical" >

    <ImageView 
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo_minus_text"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Verification"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
		android:layout_gravity="center"
		android:padding="10dp"
		android:background="@drawable/background_with_rounded_corners_and_fill"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp" >
	
	        <ImageView
	            android:layout_width="0dp"
	            android:layout_weight="10"
	            android:layout_height="30dp"
	            android:padding="0dp"
	            android:layout_marginRight="5dp"
	            android:layout_gravity="left|center_vertical"
	            android:src="@drawable/phone" />
	
	        <EditText
	            android:id="@+id/et_phone"
  				android:layout_width="0dp"
		        android:layout_weight="90"	            
		        android:layout_height="wrap_content"
	            android:hint="Enter Phone Number"
		        android:textColor="@color/black"
	            android:ems="10"
	            android:inputType="phone" />

	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/verify_btn"
	        android:layout_width="match_parent"
			android:layout_gravity="center_horizontal"        
	        android:layout_height="wrap_content"
	        android:background="@color/bright_orange"
	        android:layout_marginTop="10dp"
	        android:weightSum="100"
	        android:orientation="horizontal">
	        
	        <ImageView
	            android:id="@+id/verify_call"
	            android:layout_width="0dp"
	            android:layout_height="50dp"
				android:layout_weight="20"
	            android:padding="5dp"
	            android:layout_marginLeft="20dp"
	            android:background="@color/bright_orange"
	            android:src="@drawable/lock" />
	    	
	    	<TextView
	    	    android:id="@+id/verify_text"
	    	    android:text="SAVE/VERIFY"
	    	    android:textColor="@color/black"
	    	    android:gravity="center_vertical"
	    	    android:layout_width="0dp"
	    	    android:layout_weight="80"
	    	    android:layout_height="match_parent"
	    	    android:background="@color/bright_orange"
	    	    android:layout_marginLeft="20dp"
	    	    android:textSize="20dp" />
	        
	    </LinearLayout>
	        
    </LinearLayout>
    
</LinearLayout> 